# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=mexc

# Optional: Specify different database name
# DATABASE_NAME=mexc_futures

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Telegram Bot Configuration (for alerts)
# Create a bot with @BotFather and get the token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram channel or chat ID where alerts will be sent
# Format: @channelname or -100xxxxxxxxxx for private groups
TELEGRAM_CHANNEL_ID=@your_channel_or_chat_id

# MEXC API Keys (optional but recommended for better rate limits)
# Get from: https://www.mexc.com/user/openapi
MEXC_ACCESS_KEY=your_access_key_here
MEXC_SECRET_KEY=your_secret_key_here